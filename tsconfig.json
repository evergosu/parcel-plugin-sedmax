{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "es6"
    ],
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}